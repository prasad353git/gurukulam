 {
    
    $uname=$_POST['usrname'];
    $password=$_POST['psw'];
    
    $sql="select * from loginform where gmail='".$uname."'AND password='".$password."' limit 1";
    
    $result=mysql_query($sql);
    
    if(mysql_num_rows($result)==1)
    {
        echo " You Have Successfully Logged in";
        exit();
    }
